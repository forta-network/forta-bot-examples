    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bignumber.js": "^9.0.1",
    "forta-agent": "^0.0.2"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "nodemon": "^2.0.8"
  }
}
